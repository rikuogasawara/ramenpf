<div class="notice alert-info h4"><%= flash[:notice] %></div>
<div class="container">
 <div class="row top-link">
  <div class="col-md-12">
   <h1>ラーメン好きな人のためのレビューサイト</h1>
    <div class="row justify-content-center">
     <%= link_to new_review_path, class:"btn btn-primary btn-lg" do %>
     <i class="fas fa-angle-double-right"></i>レビューを投稿<i class="fas fa-angle-double-left"></i>
     <% end %>
    </div>
  </div>
 </div>
 <div class="row">
  <div class="col-md-3">
   <h3 class="text-center bg-light">新着レビュー</h3>
  </div>
 </div>
 <div class="row">
  <% @review.each do |review| %>
   <div class="col-md-3">
    <div class="w-95 h-95 shadow bg-light">
     <%= link_to review_path(review) do %>
     <%= image_tag review.image,class:"img-fluid d-block mx-auto" %>
  　  <div class="text-center"><%= review.name %></div>
     <% end %>
    </div>
   </div>
  <% end %>
 </div>
 <div class="text-right">
  <%= link_to reviews_path, class:"bg-light" do %>
   全てのレビューを見る<i class="fas fa-angle-right"></i>
  <% end %>
 </div>
</div>