<div class="container">
 <div class="row">
  <div class="col-md-12">
   <h2 class="bg-light text-center w100">新規会員登録</h2>
    <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
     <%= render "public/shared/error_messages", model: f.object %>
      <table class="table table-borderless text-center">
       <tbody>
        <tr>
         <th>ユーザー名</th>
         <td><%= f.text_field :name, autofocus: true %></td>
        </tr>
        <tr>
         <th>メールアドレス</th>
         <td><%= f.email_field :email, autocomplete: "email",:placeholder => "sample@example.com" %></td>
        </tr>
         <th>パスワード(<%= @minimum_password_length %>文字以上)</th>
         <td><%= f.password_field :password, autocomplete: "new-password"%></td>
        </tr>
        <tr>
         <th>パスワード(確認用)</th>
         <td><%= f.password_field :password_confirmation%></td>
        </tr>
       </tbody>
      </table>
      <div class="row justify-content-center position">
        <%= f.submit "新規登録",class:"btn btn-success" %>
      </div>
    <% end %>
    <div class="row justify-content-center position">
      <%= render "public/shared/links" %>
    </div>
  </div>
 </div>
</div>

