<% if review.comments.present? %>
 <p>コメント件数：<%= review.comments.count %></p>
 <% review.comments.each do |comment| %>
 <div><%= comment.customer.name %></div>
 <div><%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.content %></div>
 <% if comment.customer == current_customer%>
 <div>
  <%= link_to review_comment_path(review, comment), class: "btn btn-danger text-white", method: :delete, remote:true do  %>
   <i class="fas fa-trash-alt"></i>
  <% end %>
 </div>
 <% end %>
 <% end %>
 <% else %>
 <p>コメントはまだありません</p>
<% end %>